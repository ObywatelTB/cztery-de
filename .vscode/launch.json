{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Frontend (Next.js)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "/opt/homebrew/bin/npm",
            "runtimeArgs": ["run", "dev", "--", "-p", "3009"],
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "development",
                "PATH": "/opt/homebrew/bin:${env:PATH}"
            }
        },
        {
            "name": "Debug Backend (FastAPI)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "3010",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/backend/venv/bin/python",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            }
        },
        {
            "name": "Debug Full Stack",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "/opt/homebrew/bin/npm",
            "runtimeArgs": ["run", "dev", "--", "-p", "3009"],
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "development",
                "PATH": "/opt/homebrew/bin:${env:PATH}"
            },
            "preLaunchTask": "Run Backend (FastAPI)"
        }
    ],
    "compounds": [
        {
            "name": "Debug Frontend + Backend",
            "configurations": ["Debug Backend (FastAPI)", "Debug Frontend (Next.js)"]
        }
    ]
}
