{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Frontend (Next.js)",
            "type": "shell",
            "command": "cd frontend && PATH=/opt/homebrew/bin:$PATH /opt/homebrew/bin/npm run dev",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Run Backend (FastAPI)",
            "type": "shell",
            "command": "cd backend && ./venv/bin/python main.py",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Run Full Stack",
            "dependsOn": [
                "Run Frontend (Next.js)",
                "Run Backend (FastAPI)"
            ],
            "dependsOrder": "parallel",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
